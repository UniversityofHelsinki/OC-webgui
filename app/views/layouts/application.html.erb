<!DOCTYPE html>
<html>
<head>
  <title>OCWebgui</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="ocWebGui">
  <!-- Navbar for every page -->
  <div class="navbar card" ng-controller="NavbarController as navbar">
    <a ui-sref="screen" class="card">Status-näkymä</a>
    <a ui-sref="queue" class="card">Jono-näkymä</a>
    <a ui-sref="filterpanel" class="card">Filtteröi</a>
    <a ui-sref="stats" class="card">Tilastot</a>
    <a ui-sref="personal" class="card" ng-if="navbar.isAuthenticated()">{{ navbar.username() }}</a>
    <a ui-sref="login" ng-if="!navbar.isAuthenticated()" class="card">Kirjaudu sisään</a>
    <a ng-if="navbar.isAuthenticated()" ng-click="navbar.logout()" class="card">Kirjaudu ulos</a>
    <a href ng-click="navbar.goFullscreen()" class="card">
        {{ navbar.isFullscreen == true ? 'Pois kokoruudusta' : 'Kokoruutu' }}
    </a>
  </div>
  <ui-view></ui-view>
</body>
</html>
